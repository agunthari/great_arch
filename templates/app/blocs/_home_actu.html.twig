{# @app/blocks/_home_actu.html.twig #}

<section id="actualite" class="container">
  <div class="card">
    <div class="card-header"><h2>L'actualite</h2></div>
    <div class="card-body">
      <div class="row">
      <div class="col">
        <img src="{{ asset('img/actu/news'~random(1, 5)~'.jpg') }}"/>
      </div>
      <div id="scroll_depeche" class="col-9">
        <ul style="margin: 0px; padding: 0px; position: relative; list-style-type: none; z-index: 1; height: 1600px; top: -541.06px;">
            {% for item in actu_list %}
              <li style="overflow: hidden; float: none; width: 767px; height: 80px;">
                <table class="table_depeche" border="0" cellspacing="0" cellpadding="0">
                  <tbody>
                    <tr>
                      <td style="width:80px;vertical-align: top;">
                        {{ item.publicationDate|date('d') }} {{ item.publicationDate|date('M')|trans }}
                      </td>
                      <td style="width:20px;vertical-align: top;">
                        <img src="{{ asset('img/icons/bullet.png') }}">
                      </td>
                      <td style="vertical-align: top;overflow: hidden;">
                        <a class="btn-category {{ item.category|lower|replace({' ':'-'}) }}" href="{{ path('rf_article', {article : item.id })  }}">{{ item.category }}</a><br/>
                        <a class="title-depeche" href="{{ path('rf_article', {article : item.id })  }}">{{ item.title }}</a><br/>
                        <a class="teaser-depeche" href="{{ path('rf_article', {article : item.id })  }}">{{ item.teaser }}</a>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>