{# @app/blocks/home_actu.html.twig #}

{%
  set category_slugs = {
    "Social" : 'soci',
    "Paye" : 'paye',
  }
%}

<section id="actualite">
  <div class="global_contain centrage margin-top-40 actu">l'actu</div>
  <div class="shadow global_contain centrage">
    <div class="contain_actu" id="bg_actu" style="background-image: url(&quot; {{ asset('img/actu/news'~random(1, 5)~'.jpg') }}&quot;);">
      <div id="scroll_depeche" style="visibility: visible; overflow: hidden; position: relative; z-index: 2; left: 0px; height: 240px;">
        <ul style="margin: 0px; padding: 0px; position: relative; list-style-type: none; z-index: 1; height: 1600px; top: -541.06px;">
          {% for item in actu_list %}
            <li style="overflow: hidden; float: none; width: 767px; height: 80px;">
              <table class="table_depeche" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                  <tr>
                    <td class="date_depeche">{{ item.publicationDate|date('d') }} {{ item.publicationDate|date('M')|trans }}</td>
                    <td class="point_depeche">
                      <img src="{{ asset('img/icons/bullet.png') }}">
                    </td>
                    <td class="texte_depeche">
                      <span class="texte_depeche_cat_{{ category_slugs[ item.category ] }}">
                        <a href="{{ path('rf_social__actu__article', {article : item.id })  }}">{{ item.category }}</a>
                      </span>
                      <div>
                        <span class="texte_depeche_article gras">
                          <a href="{{ path('rf_social__actu__article', {article : item.id })  }}">{{ item.title }}</a>
                        </span>
                      </div>
                      <div>
                        <span class="texte_depeche_article">
                          <a href="{{ path('rf_social__actu__article', {article : item.id })  }}">{{ item.teaser }}</a>
                        </span>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </li>
          {% endfor %}
        </ul>
      </div>
      <span id="circle_toutes_depeche" class="fa fa-circle">
      </span>
      <div class="toutes_depeche">
        <a href="{{ path('rf_social__actu') }}">Voir toutes les actualit√©s</a>
      </div>
      <div id="trait_depeche">
      </div>
    </div>
  </div>
</section>